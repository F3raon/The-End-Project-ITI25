@model User
@* @{
    Layout = "~/Views/Shared/_MyloginLayout.cshtml";
} *@

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h2 class="text-success">Add New User</h2>
                        <p class="text-muted">Please fill in the form to create a new account.</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-action="Register">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="FName" class="form-label"></label>
                                <input asp-for="FName" class="form-control form-control-lg" placeholder="First Name" />
                                <span asp-validation-for="FName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LName" class="form-label"></label>
                                <input asp-for="LName" class="form-control form-control-lg" placeholder="Last Name" />
                                <span asp-validation-for="LName" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label mt-2"></label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email Address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Password" class="form-label mt-2"></label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label mt-2"></label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="text-center mt-4">
                            <p class="text-muted">
                                You have an account?
                                <a asp-controller="User" asp-action="Login" class="text-decoration-none">Login</a>
                            </p>
                        </div>
                        <div class="d-grid gap-2 mt-5">
                            <input type="submit" value="Add User" class="btn btn-success btn-lg" />
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}
